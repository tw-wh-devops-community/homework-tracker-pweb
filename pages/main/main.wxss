/**index.wxss**/

.authen {
  display: flex;
  position: fixed;
  top: 20rpx;
  left: 30%;
  right: 30%;
}

.welcome-block {
  display: flex;
  flex-direction: column;
  position: fixed;
  bottom: 75%;
  left: 2%;
  height: 20%;
  width: 100%;
}

.homework-middle-container {
  margin-top: 45%;
}

.user-info {
  display: flex;
  flex-direction: row;
  position: fixed;
  bottom: 85%;
  width: 100%;
  top:  5%;
}

.userinfo-avatar {
  width: 20%;
  height: 100%;
  margin: 20rpx;
  left: 3%;
  border-radius: 50%;
}

.userinfo-nickname {
  position: relative;
  top: 50%;
  color: #aaa;
  height: 50%;
  font-size: 50rpx;
}

.welcome-message {
  position: relative;
  top:  75%;
  left: 3%;
  color: #aaa;
  font-size: 80%;
}

.homework {
  display: flex;
  flex-direction: column;
  position: fixed;
  left: 5rpx;
  right: 5rpx;
  top: 25%;
  height: 80%;
}

.homework-info {
  display: flex;
  flex-direction: column;
  position: relative;
  top: 5%;
  bottom: 80%;
}

.homework-finished-info {
  display: flex;
  flex-direction: row;
  position: relative;
  top: 5%;
  height: 30%;
  background-color: #F2F2F2;
}

.homework-unFinished-info {
  display: flex;
  flex-direction: row;
  position: relative;
  top: 20%;
  height: 30%;
}

.icon {
  position: absolute;
  left: 3%;
  top: 10%;
  height: 80%;
  width: 10%;
}

.total-info {
  position: relative;
  left: 8%;
  top: 35%;
}

.info {
  position: relative;
  left: 15%;
}

.homework-unfinished {
  position: fixed;
  top: 40%;
  bottom: 0%;
}

.homework-detail {
  display: flex;
  flex-direction: column;
  position: relative;
  margin: 10rpx 5rpx 10rpx 5rpx;
  background-color: #F8F2F5;
  padding: 10rpx;
  height: 28.5%;

}

.info-row {
  display: flex;
  flex-direction: row;
  position: relative;
  top: 5%;
  height: 25%;
  width: 100%;
}

.candidate {
  position: absolute;
  font-size: 120%;
  font-weight: 5;
  height: 100%;
  width: 50%;
}

.hour-remain{
  position: relative;
  top: 20%;
  font-size: 60%;
  font-weight: 3;
  left: 10%;
}

.home-info {
  margin: 5rpx 3rpx 5rpx 3rpx;
  background-color: #c8c8c8;
  display: flex;
  flex-direction: row;
  height: 10%;
  position: static
}

.hour-icon {
  position: absolute;
  top: 10%;
  left: 52%;
  height: 100%;
  width: 8%
}

.hour-remain-info {
  position: absolute;
  top: 20%;
  font-size: 80%;
  left: 60%;
  width: 38%;
  border-radius: 80rpx;
  text-align: center;
  color: white;
}

.assign-time-info {
  position: relative;
  top: 25%;
  height: 15%;
}

.finish-time-info {
  position: relative;
  top: 35%;
  height:15%;
}

.no-unFinished-homework-info {
  display: flex;
  flex-direction: column;
  position: relative;
  top: 30%;
  height: 8%;
}

.no-unFinished-homework-icon {
  position: absolute;
  top: 10%;
  left: 30%;
  height: 100%;
  width: 8%
}

.no-unFinished-homework-text {
  position: relative;
  top: 40%;
  left: 40%;
  font-size: 80%;
}
